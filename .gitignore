# This .gitignore file is for Unity projects

# Ignore system files
.DS_Store
Thumbs.db

# Ignore user-specific Unity files
Library/
Temp/
Obj/
Logs/
UserSettings/
MemoryCaptures/

# Ignore builds
Build/
Builds/
[Ll]ibrary/
[Bb]uild/
[Bb]uilds/
Assets/AssetStoreTools*

# Autogenerated VS/VSCode/JetBrains Rider files
.vscode/
*.csproj
*.sln
*.user
*.unityproj
*.pidb
*.suo
*.userprefs
*.tmproj
*.booproj
*.svd
*.idea/

# TextMeshPro autogenerated files
Assets/TextMesh Pro/*

# Ignore burst compiler files
BurstCache/

# Ignore ShaderCache
[Oo]bj/
[Ss]treamingAssets/

# Ignore crash reports
CrashReports/

# Ignore temporary files
Temp/

# Ignore logs
*.log
*.stacktrace

# Ignore Visual Studio Code workspace history
.vscode/

# Ignore JetBrains Rider project settings
.idea/

# Particle System Cache
/Assets/Gizmos/

# Packages
Packages/*
!Packages/manifest.json
!Packages/packages-lock.json

# ScriptableObject auto-gen files
/Assets/**/*.asset
